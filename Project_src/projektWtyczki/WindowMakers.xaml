<Window x:Class="projektWtyczki.WindowMakers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projektWtyczki"
        mc:Ignorable="d"
        Title="WindowMakers" Height="450" Width="400">
    <Grid Background="#FF151515">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Grid.RowSpan="6" Grid.ColumnSpan="4" x:Name="dgAutorzy" ItemsSource="{Binding}">

        </DataGrid>
        <Button Content="Save changes" Background="Honeydew" FontFamily="Comic Sans MS" Foreground="Black" FontSize="11" Grid.Column="4" Grid.ColumnSpan="2"  Grid.Row="5" Click="Button_Click" />


    </Grid>
</Window>
